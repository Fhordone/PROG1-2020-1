@model Carrera

<h1>Formulario de registro de carrera</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Facultad"></label>
        <select asp-for="FacultadId" asp-items="ViewBag.Facultades" class="form-control"></select>
    </div>
    <button>Guardar</button>
</form>